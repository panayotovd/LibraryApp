@model LibraryApp.Models.Author
@{
    ViewData["Title"] = "Изтриване";
    var blockReason = ViewBag.BlockReason as string;
}
<h2 class="mb-3 text-danger"><i class="bi bi-trash me-2"></i>Изтриване</h2>

@if (!string.IsNullOrWhiteSpace(blockReason))
{
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-octagon me-2"></i>
        <div>@blockReason</div>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
}
else
{
    <div class="alert alert-warning"><i class="bi bi-exclamation-triangle me-1"></i> Сигурни ли сте, че искате да изтриете този запис?</div>
    <dl class="row">
        <dt class="col-sm-3">Име</dt>
        <dd class="col-sm-9">@Model.Name</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i> Изтрий</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Отказ</a>
        </div>
    </form>
}
