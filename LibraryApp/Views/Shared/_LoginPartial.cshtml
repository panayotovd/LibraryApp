@using Microsoft.AspNetCore.Identity
@using LibraryApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-2 d-flex align-items-center text-muted">
            Здравей, @UserManager.GetUserName(User)!
        </li>
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/">
                <button class="btn btn-outline-secondary btn-sm" type="submit">Изход</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item me-2">
            <a class="btn btn-outline-secondary btn-sm" asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-success btn-sm" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
    }
</ul>
