@using LibraryApp.Models.ViewModels
@model PagedResult<object>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Навигация по страници">
        <ul class="pagination justify-content-center flex-wrap">

            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link" href="@($"{Model.QueryString}&page=1")" aria-label="Първа">
                    <span aria-hidden="true">&laquo;&laquo;</span>
                </a>
            </li>

            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link" href="@($"{Model.QueryString}&page={Model.Page - 1}")" aria-label="Предишна">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.Page)
                {
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">@i</span>
                    </li>
                }
                else if (i >= Model.Page - 2 && i <= Model.Page + 2)
                {
                    <li class="page-item">
                        <a class="page-link" href="@($"{Model.QueryString}&page={i}")">@i</a>
                    </li>
                }
            }

            <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@($"{Model.QueryString}&page={Model.Page + 1}")" aria-label="Следваща">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>

            <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@($"{Model.QueryString}&page={Model.TotalPages}")" aria-label="Последна">
                    <span aria-hidden="true">&raquo;&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}
