@model IEnumerable<LibraryApp.Models.Event>
@{
    ViewData["Title"] = "Събития";
    var pager = (LibraryApp.Models.ViewModels.PagedResult<object>)ViewBag.Pager;
    var f = ViewBag.Filters;
}

<h1 class="mb-3">Събития</h1>

<form method="get" class="row g-2 mb-3 align-items-center">
    <div class="col-md-4">
        <input name="q" value="@f.q" class="form-control" placeholder="Търси по заглавие/описание" />
    </div>

    <div class="col-md-3">
        <input type="date" name="from" value="@(f.from == null ? "" : ((DateTime)f.from).ToString("yyyy-MM-dd"))" class="form-control" />
    </div>

    <div class="col-md-3">
        <input type="date" name="to" value="@(f.to == null ? "" : ((DateTime)f.to).ToString("yyyy-MM-dd"))" class="form-control" />
    </div>

    <div class="col-md-auto">
        <button class="btn btn-primary">Филтрирай</button>
        <a class="btn btn-outline-secondary ms-2" href="@Url.Action("Index")">Изчисти</a>
    </div>
</form>

<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-success" href="@Url.Action("Create")">+ Ново събитие</a>
</div>

<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>@Html.SortLink("date", "Дата", (object)ViewBag.Filters)</th>
            <th>@Html.SortLink("title", "Заглавие", (object)ViewBag.Filters)</th>
            <th>@Html.SortLink("count", "Участници", (object)ViewBag.Filters)</th>
            <th style="width:220px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.StartAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@e.Title</td>
                <td>@(e.EventMembers?.Count ?? 0)</td>
                <td class="text-nowrap">
                    @await Html.PartialAsync("_CrudActions",
                    new LibraryApp.Models.ViewModels.CrudActionsModel { Controller = "Events", Id = e.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_Pager", pager)
