@model IEnumerable<LibraryApp.Models.Event>
@{
    ViewData["Title"] = "Събития";
}
<h1 class="mb-3">Събития</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input name="q" value="@ViewBag.Search" class="form-control" placeholder="Търси по заглавие/описание" />
    </div>
    <div class="col-md-3">
        <input type="date" name="from" value="@ViewBag.From" class="form-control" />
    </div>
    <div class="col-md-3">
        <input type="date" name="to" value="@ViewBag.To" class="form-control" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary w-100">Филтрирай</button>
    </div>
</form>

<div class="mb-3 text-end">
    <a class="btn btn-success" href="@Url.Action("Create")">+ Ново събитие</a>
</div>

<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>Дата</th>
            <th>Заглавие</th>
            <th>Брой участници</th>
            <th style="width:220px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.StartAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@e.Title</td>
                <td>@(e.EventMembers?.Count ?? 0)</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Details", new { id = e.Id })">Детайли</a>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = e.Id })">Редакция</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = e.Id })">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>
