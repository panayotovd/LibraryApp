@model LibraryApp.Models.Event
@{
    ViewData["Title"] = "Детайли";
    var membersSelect = ViewBag.Members as SelectList;
    bool hasFree = membersSelect != null && membersSelect.Any();
}

<h2 class="mb-3"><i class="bi bi-eye me-2"></i>Детайли</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">Заглавие</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Начало</dt>
    <dd class="col-sm-10">@Model.StartAt.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-2">Описание</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<h5 class="mt-4">Участници (@(Model.EventMembers?.Count ?? 0))</h5>
<div class="list-group mb-3">
@foreach (var em in (Model.EventMembers ?? Enumerable.Empty<LibraryApp.Models.EventMember>())
                     .OrderBy(x => x.Member!.Name))
{
    <div class="list-group-item d-flex align-items-center">
        <i class="bi bi-person me-2"></i>
        <span>@em.Member?.Name</span>
    </div>
}
@if (!(Model.EventMembers?.Any() ?? false))
{
    <div class="list-group-item text-muted">Няма участници.</div>
}
</div>

<h5 class="mt-4">Добави участник</h5>
@if (!hasFree)
{
    <div class="alert alert-info">Няма свободни членове за добавяне.</div>
}
else
{
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="row g-2 align-items-end">
        @Html.AntiForgeryToken()
        <input type="hidden" name="op" value="add-member" />
        <div class="col-md-6">
            <label class="form-label" for="memberId">Член</label>
            <select id="memberId" name="memberId" class="form-select"
                    asp-items="@(ViewBag.Members as SelectList)">
                <option value="">-- избери --</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-plus-lg"></i> Добави
            </button>
        </div>
    </form>
}

<a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Назад</a>
