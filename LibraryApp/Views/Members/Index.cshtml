@model IEnumerable<LibraryApp.Models.Member>
@{
    ViewData["Title"] = "Членове";
    var q = Context.Request.Query["q"].ToString();
    var sort = Context.Request.Query["sort"].ToString();
    var dir = Context.Request.Query["dir"].ToString();
    string NextDir(string col) => (sort == col && dir == "asc") ? "desc" : "asc";
    Func<string, string> Icon = col => sort == col ? $"bi bi-caret-{(dir == "asc" ? "up" : "down")}-fill" : "";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0"><i class="bi bi-person-badge me-2"></i>Членове</h2>
    @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
    {
        <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-1"></i> Нов член</a>
    }
</div>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-sm-6 col-md-4">
        <label class="form-label">Търсене</label>
        <input name="q" value="@q" class="form-control" placeholder="Име или имейл">
    </div>
    <div class="col-auto">
        <label class="form-label d-block">&nbsp;</label>
        <button class="btn btn-outline-secondary"><i class="bi bi-search"></i> Търси</button>
        <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-x"></i> Изчисти</a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="text-center py-5 border rounded bg-light-subtle"><i class="bi bi-inbox display-6 d-block mb-2"></i><div class="lead">Няма записи</div></div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-q="@q" asp-route-sort="name" asp-route-dir="@NextDir("name")">
                            Име <i class="@Icon("name")"></i>
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-q="@q" asp-route-sort="email" asp-route-dir="@NextDir("email")">
                            Имейл <i class="@Icon("email")"></i>
                        </a>
                    </th>
                    <th class="text-nowrap">
                        <a asp-action="Index" asp-route-q="@q" asp-route-sort="joined" asp-route-dir="@NextDir("joined")">
                            Дата на присъединяване <i class="@Icon("joined")"></i>
                        </a>
                    </th>
                    <th class="text-end" style="width:1%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td class="fw-medium">@m.Name</td>
                        <td>@m.Email</td>
                        <td>@m.JoinedAt.ToString("yyyy-MM-dd")</td>
                        <td class="text-nowrap text-end">
                            @{
                                ViewBag.ViewUrl = Url.Action("Details", new { id = m.Id });
                                ViewBag.EditUrl = Url.Action("Edit", new { id = m.Id });
                                ViewBag.DeleteUrl = Url.Action("Delete", new { id = m.Id });
                            }
                            <partial name="~/Views/Shared/_CrudActions.cshtml" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <partial name="~/Views/Shared/_Pager.cshtml" model="ViewBag.Pager" />
}
