@model LibraryApp.Models.Book
@{
    ViewData["Title"] = "Редакция";
}
<h1>Редакция</h1>
<hr />
<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />
    <div class="col-md-6">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="ISBN" class="form-label"></label>
        <input asp-for="ISBN" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="col-md-8">
        <label class="form-label">Автор</label>
        <select asp-for="AuthorId" class="form-select" asp-items="ViewBag.Authors"></select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Summary" class="form-label"></label>
        <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Запази</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Назад</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
